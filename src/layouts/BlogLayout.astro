---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

var { title, description } = Astro.props;
if (!title) {
    title = "dev.wellwich.com";
} else {
    title = title + " | dev.wellwich.com";
}
if (!description) {
    description =
        "wellwichの技術ブログです。ゲーム開発がメインです。Godot、Phaser3を使ってます。";
}
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <link rel="icon" href="/favicon.ico?" type="image/x-icon" />
        <script is:inline>
            window.googletag = window.googletag || { cmd: [] };
        </script>
        <script is:inline>
            googletag.cmd.push(function () {
                const headerSlot = googletag
                    .defineSlot(
                        "/23167867665/dev_all_header",
                        [
                            [728, 90],
                            [320, 50],
                            [468, 60],
                            [970, 90],
                        ],
                        "div-gpt-ad-1718081104718-0",
                    )
                    .addService(googletag.pubads());
                const mapping = googletag
                    .sizeMapping()
                    .addSize(
                        [992, 744],
                        [
                            [970, 90],
                            [728, 90],
                        ],
                    )
                    .addSize([768, 576], [728, 90])
                    .addSize(
                        [517, 387],
                        [
                            [468, 60],
                            [320, 50],
                        ],
                    )
                    .addSize([0, 0], [320, 50])
                    .build();

                headerSlot.defineSizeMapping(mapping);
                const sidebarSlot = googletag
                    .defineSlot(
                        "/23167867665/dev_all_sidebar",
                        [160, 600],
                        "div-gpt-ad-1718103576790-0",
                    )
                    .addService(googletag.pubads());
                const sidebarMapping = googletag
                    .sizeMapping()
                    .addSize([0, 0], [160, 600])
                    .build();
                sidebarSlot.defineSizeMapping(sidebarMapping);
                googletag.pubads().enableSingleRequest();
                googletag.enableServices();

                googletag.display("div-gpt-ad-1718081104718-0");
                googletag.display("div-gpt-ad-1718103576790-0");
            });
        </script>
    </head>
    <body class="bg-gray-100 text-gray-900">
        <Header />
        <!-- /23167867665/dev_all_header -->
        <div
            id="div-gpt-ad-1718081104718-0"
            style="min-width: 320px; min-height: 50px;"
            class="ads"
        >
        </div>
    </body>
    <div class="flex flex-col md:flex-row max-w-6xl mx-auto w-full">
        <main class="p-4 md:w-3/5">
            <slot />
        </main>
        <div class="p-4 md:w-2/5">
            <Sidebar />
            <!-- /23167867665/dev_all_sidebar -->
            <div
                id="div-gpt-ad-1718103576790-0"
                style="min-width: 160px; min-height: 600px;"
                class="ads"
            >
            </div>
        </div>
    </div>
    <Footer />
</html>
