---
import type { BlogPostType } from "../blog";

const { tags } = Astro.props as BlogPostType;
// tagsをソート
tags.sort((a, b) => a.localeCompare(b));
---

<ul class="tag">
    {
        tags.map((tag) => (
            <li class="bg-gray-200 px-2 py-1 rounded m-1 inline-block">
                <a href={`/tags/${tag}`} class="text-blue-600 hover:underline">
                    #{tag}
                </a>
            </li>
        ))
    }
</ul>
