---
import type { BlogPostType } from "../blog";
import TagList from "./TagList.astro";
import Time from "./Time.astro";

const { title, date, description, slug, tags } = Astro.props as BlogPostType;
---

<div class="mb-8 p-4 border rounded-lg">
    <h2 class="text-2xl font-bold"><a href={`/blog/${slug}`}>{title}</a></h2>
    <Time date={date} />
    <p>{description}</p>
    <TagList tags={tags} />
    <a href={`/blog/${slug}`} class="text-blue-600 hover:underline flex">
        続きを読む
    </a>
</div>
